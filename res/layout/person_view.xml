<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:weightSum="1">
    <requestFocus android:layout_gravity="bottom" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.07" android:baselineAligned="false">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp" android:layout_margin="5dp">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/personImage"
                        android:layout_alignParentTop="false" android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/personNamep_v1"
                        android:layout_toEndOf="@+id/personImage"
                        android:background="@android:color/background_light"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/personImage" android:textSize="20dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/budgetp_v"
                        android:background="@android:color/background_light"
                        android:textColor="@android:color/background_dark"
                        android:layout_alignTop="@+id/spentp_v"
                        android:layout_alignParentEnd="true" android:gravity="right"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/spentp_v"
                        android:background="@android:color/background_light"
                        android:textColor="@android:color/background_dark"
                        android:layout_toEndOf="@+id/personImage"
                        android:layout_below="@+id/progressBar"
                        android:layout_toRightOf="@+id/personImage"/>
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_toEndOf="@+id/personImage"
                        android:indeterminate="false"
                        android:background="@android:color/background_dark"
                        android:layout_toRightOf="@+id/personImage"
                        android:layout_below="@+id/personNamep_v1"
                        android:layout_alignRight="@+id/budgetp_v"/>
            </RelativeLayout>
        </TableRow>
        <requestFocus android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                      android:layout_marginBottom="83dp"/>
        <requestFocus android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                      android:layout_marginBottom="139dp"/>
        <requestFocus android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
        <requestFocus android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>