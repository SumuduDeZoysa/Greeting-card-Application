<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/background_light">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp" android:layout_margin="5dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/giftImageg_v" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/giftNameg_v"
                    android:layout_toEndOf="@+id/giftImageg_v"
                    android:textColor="@android:color/background_dark" android:layout_above="@+id/giftImageg_v"
                    android:textSize="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/budgetg_v"
                    android:textColor="@android:color/background_dark" android:layout_alignTop="@+id/giftNameg_v"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/giftStatusg_v"
                    android:textColor="@android:color/background_dark" android:layout_alignTop="@+id/budgetg_v"
                    android:layout_alignParentEnd="true" android:gravity="right"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </TableRow>
</LinearLayout>