<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/background_light">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:weightSum="1" android:layout_margin="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:id="@+id/textView" android:layout_gravity="right"
                android:textColor="@android:color/background_dark"
                android:gravity="right" android:textSize="15dp" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
        <LinearLayout android:id="@+id/chart" android:orientation="horizontal"
                      android:layout_width="270dp" android:layout_height="wrap_content"
                      android:background="@android:color/background_light" android:layout_weight="0.16"
                      android:layout_toStartOf="@+id/noOfGroups"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true" android:layout_alignParentLeft="true"
                      android:layout_below="@+id/spentAll">
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:id="@+id/noOfGroups"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_below="@+id/textView" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People"
                android:id="@+id/textView3"
                android:textColor="@android:color/background_dark"
                android:textAlignment="textEnd"
                android:textSize="15dp" android:layout_alignParentTop="true" android:layout_alignLeft="@+id/textView5"
                android:gravity="center_vertical|center_horizontal" android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/noOfPeople"
                android:textColor="@android:color/background_dark"
                android:gravity="left" android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="gravity"
                android:layout_above="@+id/textView5" android:layout_alignLeft="@+id/textView5"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:id="@+id/textView5"
                android:textColor="@android:color/background_dark" android:textAlignment="textEnd"
                android:textSize="15dp"
                android:layout_below="@+id/noOfGroups"
                android:gravity="center_vertical|center_horizontal" android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:id="@+id/peopleBudget"
                android:textColor="@android:color/background_dark"
                android:gravity="left" android:textStyle="bold"
                android:layout_below="@+id/noOfGroups" android:layout_alignLeft="@+id/textView3"
                android:layout_marginTop="21dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Budget"
                  android:id="@+id/textView2" android:textColor="@android:color/background_dark"
                  android:textAlignment="textEnd" android:gravity="right" android:textSize="15dp"
                  android:layout_below="@+id/noOfGroups" android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  "
                  android:id="@+id/groupBudget" android:textColor="@android:color/background_dark"
                  android:gravity="left"
                  android:textStyle="bold"
                  android:layout_alignBaseline="@+id/spentAll" android:layout_alignBottom="@+id/spentAll"
                  android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gifts"
                  android:id="@+id/textView4" android:textColor="@android:color/background_dark"
                  android:textAlignment="textEnd" android:gravity="right" android:textSize="15dp"
                  android:layout_alignParentTop="true" android:layout_alignRight="@+id/noOfGifts"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                  android:id="@+id/noOfGifts" android:textColor="@android:color/background_dark" android:gravity="left"
                  android:textStyle="bold" android:textSize="15dp" android:textAlignment="gravity"
                  android:layout_below="@+id/textView4" android:layout_alignParentRight="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spent"
                  android:id="@+id/textView7" android:textColor="@android:color/background_dark"
                  android:textAlignment="textEnd" android:gravity="right" android:textSize="15dp"
                  android:layout_below="@+id/noOfGifts" android:layout_alignParentRight="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  "
                  android:id="@+id/spentAll" android:textColor="@android:color/background_dark"
                  android:textStyle="bold"
                  android:layout_below="@+id/textView7"
                  android:gravity="right" android:layout_alignRight="@+id/noOfGifts"/>
    </RelativeLayout>
</LinearLayout>
